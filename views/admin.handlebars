<div class="row" style="background-color: #E28413; height: 90vh;">
  <div class="col-12 d-flex p-4 justify-content-center">
    <div class="align-self-center">
      <div class="text-center">
        <img style="border-radius: 10px" class="mb-2" src="./img/p.png" alt="" width="72" height="72">
      </div>
      <div class="text-center">
        <h1 class="h3 mb-3 font-weight-normal pacifico">Sign In</h1>
      </div>
      <form action="/admin" method="post" encType="multipart/form-data">
        <div class="mb-2">
          <label for="inputEmail" class="sr-only">Email address </label>
          <input type="email" class="form-control" placeholder="Email address" name="username" >
        </div>
        <div class="mb-2">
          <label for="inputPassword" class="sr-only">Password</label>
          <input type="password"  class="form-control" placeholder="Password" name="password">
        </div>
        <div class="mb-2">
          <button class="btn btn-sm btn-danger btn-block" type="submit">Sign in</button>
        </div>
      </form>
    </div>
  </div>
</div>
