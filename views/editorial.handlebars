<div class="row " style="background-color: #E28413; height: 10vh">
</div>
<div class="row justify-content-center" style="background-color: #FF165D;">
  <div class="col-8 p-4">
    <div class="align-self-center">
      <div style="background-color: #fff" class="rounded border mt-5 p-3">
        <h1 style="color: #7A7B7F;" class="text-center pacifico ">Editorial</h1>
        <hr>
        <form id="form" method="post" action="/editorial" encType="multipart/form-data">
          <div class=" p-2 ">
            <div class="row ">

                  <label for="photo" class="text-center border rounded col m-1 shadow hover rec">
                    <h1 id="coverText" style="color: #7A7B7F;" class="mt-3 text-center pacifico ">Cover Photo</h1>
                    <img style="padding: 1em;" class="img-fluid hidden" id="sample1" src="" alt="not an image">
                    <small id="photoWarning" class="hidden ml-2 text-danger">Excepted file types: jpg, jpeg, bmp, gif, png</small>
                  </label>
                  <input id="photo" name="photo" type="file" />

                  <label for="article" class="text-center border rounded col m-1 shadow hover rec">
                    <h1 id="articleText" style="color: #7A7B7F;" class="mt-3 text-center pacifico ">Article</h1>
                    <img style="padding: 1em;" class="img-fluid hidden" id="sample2" src="/img/file.png" alt="file uploaded">
                    <p style="padding: 0.2em; word-wrap: break-word; font-size: 0.6em" class="hidden" id="sample2-2"></p>
                    <small id="articleWarning" class="hidden ml-2 text-danger">Excepted file types: doc, docx, odt, pdf, rtf, tex, txt, wpd </small>
                  </label>
                  <input id="article" name="article" type="file" />

            </div>
          </div>
          <hr>
          <div class="border p-3 rounded shadow-sm">
            <div class="form-group">
              <label for="title">Title</label>
              <input id="title" type="text" class="form-control" name="title" placeholder="Title">
              <small id="titleWarning" class="hidden ml-2 text-danger">Forgot title</small>
            </div>
            <div class="form-group">
              <label for="penName">Pen Name</label>
              <input id="penName" type="text" class="form-control" name="penName" placeholder="Pen Name">
              <small id="penNameWarning" class="hidden ml-2 text-danger">Gotta givem credit</small>
            </div>
            <div class="form-group">
              <label for="handle">Instagram Handle</label>
              <input id="handle" type="text" class="form-control" name="handle" placeholder="Instagram Handle">
              <small id="handleWarning" class="hidden ml-2 text-danger">Missing Instagram handle</small>
            </div>
          </div>
          <hr>
          <div class="border p-3 rounded shadow-sm">
            <label for="handle">Quotes</label>
            <div class="input-group mb-3 quote1 hidden">
              <input type="text" class="form-control" name="quoteOne" placeholder="">
              <div class="input-group-append">
                <button id="quote1" class="btn btn-outline-secondary" onclick="removeQuote(this.id)" type="button">Remove</button>
              </div>
            </div>

            <div class="input-group mb-3 quote2 hidden">
              <input type="text" class="form-control" name="quoteTwo" placeholder="">
              <div class="input-group-append">
                <button id="quote2" class="btn btn-outline-secondary" onclick="removeQuote(this.id)" type="button">Remove</button>
              </div>
            </div>

            <div class="input-group mb-3 quote3 hidden">
              <input type="text" class="form-control" name="quoteThree" placeholder="">
              <div class="input-group-append">
                <button id="quote3" class="btn btn-outline-secondary" onclick="removeQuote(this.id)" type="button">Remove</button>
              </div>
            </div>

            <div class="input-group mb-3 quote">
              <input type="text" class="form-control" placeholder="New Quote">
              <div class="input-group-append">
                <button class="btn btn-outline-secondary" onclick="addQuote()" type="button">Add</button>
              </div>
            </div>
            <label for="handle">Tags</label>
            <div class="input-group mb-3">
              <input id="tag" type="text" class="form-control" placeholder="Add a Tag">
              <div class="input-group-append">
                <button class="btn btn-outline-secondary" onclick="addTag()" type="button">Add</button>
              </div>
              <div id="tagDisplay" class="input-group mb-1">
              </div>
              <input id="tags" name="tags" type="hidden" value="">
            </div>
          </div>
          <hr>
          <button type="submit" class="btn btn-outline-danger pull-right">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>
